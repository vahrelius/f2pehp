// Generate CSS rules for supporter flair

<% Player.supporters_hashes.each do |supporter| %>
  <% if supporter[:flair_before] %>
    a[href$="/<%= supporter[:name].gsub(' ', '_') %>" i]:before{
      padding: 3px;
      display: inline-flex;
      content: image-url("<%= supporter[:flair_before] %>");
    }
  <% end %>

  <% if supporter[:flair_after] %>
    a[href$="/<%= supporter[:name].gsub(' ', '_') %>" i]:after{
      padding: 3px;
      display: inline-flex;
      content: image-url("<%= supporter[:flair_after] %>");
    }
  <% end %>

  a[href$="/<%= supporter[:name].gsub(' ', '_') %>" i]{
    <% if supporter[:other_css] %>
      <% supporter[:other_css].each do |rule| %>
        <%= rule %>;
      <% end %>
    <% end %>
    
    display: inline-flex;
    align-items: center;
  }
<% end %>
